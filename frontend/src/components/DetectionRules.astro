<section class="rule-management-section">
  <div class="section-header">
    <div class="section-title">DETECTION RULES (LIVE)</div>
    <div class="header-controls">
      <div class="status-indicator">
        <span class="live-dot"></span>
        <span class="status-text">SYNCED WITH ENGINE</span>
      </div>
    </div>
  </div>

  <div class="rule-list">
    <table class="metrics-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>NAME</th>
          <th>DESCRIPTION</th>
          <th>PATTERN / LOGIC</th>
          <th>TYPE</th>
          <th>STATUS</th>
        </tr>
      </thead>
      <tbody id="rules-table-body">
        <tr>
          <td colspan="6" class="loading-cell">Connecting to rules engine...</td>
        </tr>
      </tbody>
    </table>
  </div>
</section>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const tableBody = document.getElementById('rules-table-body');

    const fetchRules = async () => {
      try {
        const response = await fetch('http://127.0.0.1:8080/api/rules');
        if (!response.ok) throw new Error('Failed to fetch rules');
        
        const rules = await response.json();
        renderRules(rules);
      } catch (error) {
        console.error('Error fetching rules:', error);
        tableBody.innerHTML = `<tr><td colspan="6" class="error-cell">Error connecting to backend: ${error.message}</td></tr>`;
      }
    };

    const renderRules = (rules) => {
      if (!rules || rules.length === 0) {
        tableBody.innerHTML = '<tr><td colspan="6">No rules found in engine.</td></tr>';
        return;
      }

      tableBody.innerHTML = rules.map(rule => {
        const statusClass = rule.enabled ? 'status-active' : 'status-inactive';
        const statusLabel = rule.enabled ? 'Enabled' : 'Disabled';
        
        let typeLabel = '';
        if (typeof rule.rule_type === 'string') {
          typeLabel = rule.rule_type;
        } else if (rule.rule_type.Custom) {
          typeLabel = rule.rule_type.Custom;
        } else {
          typeLabel = Object.keys(rule.rule_type)[0];
        }

        return `
          <tr class="rule-row">
            <td class="id-cell">${rule.id}</td>
            <td class="name-cell">
              <strong>${rule.name}</strong>
            </td>
            <td class="desc-cell">${rule.description}</td>
            <td class="pattern-cell">
              <code>${rule.pattern}</code>
            </td>
            <td class="type-cell">
              <span class="type-badge">${typeLabel}</span>
            </td>
            <td>
              <span class="${statusClass}">${statusLabel}</span>
            </td>
          </tr>
        `;
      }).join('');
    };

    // Initial fetch
    fetchRules();
  });
</script>

<style>
  /* Styles for DetectionRules component */
  .rule-management-section {
    background-color: var(--card-bg);
    border-radius: 12px;
    padding: 25px;
    margin-bottom: 30px;
    border: 1px solid var(--border-color);
  }

  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
  }

  .section-title {
    font-size: 18px;
    font-weight: 600;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: 8px;
    background-color: rgba(0, 255, 128, 0.05);
    padding: 6px 12px;
    border-radius: 20px;
    border: 1px solid rgba(0, 255, 128, 0.1);
  }

  .live-dot {
    width: 8px;
    height: 8px;
    background-color: var(--accent-green);
    border-radius: 50%;
    box-shadow: 0 0 10px var(--accent-green);
    animation: blink 2s infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.3; }
  }

  .status-text {
    font-size: 11px;
    font-weight: 600;
    color: var(--accent-green);
    letter-spacing: 0.5px;
  }

  .rule-list {
    margin-top: 10px;
  }

  .metrics-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0 8px;
    table-layout: fixed; /* Added to control column widths */
  }

  .metrics-table th {
    text-align: left;
    padding: 12px 20px;
    color: var(--text-secondary);
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 1px;
    border: none;
  }

  /* Specific column widths to prevent overflow */
  th:nth-child(1), td:nth-child(1) { width: 80px; }
  th:nth-child(2), td:nth-child(2) { width: 180px; }
  th:nth-child(3), td:nth-child(3) { width: 25%; }
  th:nth-child(4), td:nth-child(4) { width: 35%; }
  th:nth-child(5), td:nth-child(5) { width: 120px; }
  th:nth-child(6), td:nth-child(6) { width: 100px; }

  .rule-row td {
    background-color: rgba(255, 255, 255, 0.02);
    padding: 16px 20px;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
    vertical-align: middle;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .rule-row td:first-child {
    border-left: 1px solid var(--border-color);
    border-top-left-radius: 8px;
    border-bottom-left-radius: 8px;
  }

  .rule-row td:last-child {
    border-right: 1px solid var(--border-color);
    border-top-right-radius: 8px;
    border-bottom-right-radius: 8px;
  }

  .id-cell {
    font-family: 'JetBrains Mono', monospace;
    color: var(--text-secondary);
    font-size: 13px;
    white-space: nowrap;
  }

  .name-cell strong {
    color: var(--text-primary);
    font-size: 14px;
    display: block;
    line-height: 1.4;
  }

  .desc-cell {
    font-size: 13px;
    color: var(--text-secondary);
    line-height: 1.5;
  }

  .pattern-cell code {
    background-color: rgba(0, 0, 0, 0.3);
    padding: 6px 10px;
    border-radius: 4px;
    font-family: 'JetBrains Mono', monospace;
    color: var(--accent-blue);
    font-size: 12px;
    border: 1px solid rgba(0, 123, 255, 0.2);
    display: inline-block;
    max-width: 100%;
    word-break: break-all; /* Ensure long regex wraps */
    white-space: pre-wrap;
  }

  .type-badge {
    background-color: rgba(138, 43, 226, 0.1);
    color: var(--accent-purple);
    padding: 4px 10px;
    border-radius: 4px;
    font-size: 11px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .status-active {
    color: var(--accent-green);
    font-size: 12px;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .status-active::before {
    content: '';
    width: 6px;
    height: 6px;
    background-color: var(--accent-green);
    border-radius: 50%;
  }

  .status-inactive {
    color: var(--text-secondary);
    font-size: 12px;
    font-weight: 600;
  }

  .loading-cell, .error-cell {
    text-align: center;
    padding: 40px !important;
    color: var(--text-secondary);
    font-style: italic;
  }

  .error-cell {
    color: var(--accent-red);
  }
</style>
